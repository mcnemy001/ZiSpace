<?xml version="1.0" encoding="utf-8"?>
<!-- Drawable ini akan memberikan efek ripple saat item diklik -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:attr/colorControlHighlight">

    <!-- Masker untuk menentukan bentuk ripple, samakan dengan bentuk item -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_2" />
            <!-- Sesuaikan radius dengan cornerRadius CardView Anda -->
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Background default (opsional) -->
    <item android:drawable="@android:color/transparent" />
</ripple>
