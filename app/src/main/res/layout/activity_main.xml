<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_container"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph" />

    <!-- Custom Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_navigation_container"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/bottom_nav_background"
        android:elevation="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Home Tab -->
        <LinearLayout
            android:id="@+id/nav_home_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/nav_home_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home_selector"
                android:contentDescription="@string/nav_home" />

            <TextView
                android:id="@+id/nav_home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_home"
                android:fontFamily="@font/quicksand_medium"
                android:textSize="12sp"
                android:textColor="@drawable/bottom_nav_item_color"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Daily Activity Tab -->
        <LinearLayout
            android:id="@+id/nav_daily_activity_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/nav_daily_activity_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_daily_activity_selector"
                android:contentDescription="@string/nav_daily_activity" />

            <TextView
                android:id="@+id/nav_daily_activity_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_daily_activity"
                android:textSize="12sp"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="@drawable/bottom_nav_item_color"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Gallery Tab -->
        <LinearLayout
            android:id="@+id/nav_gallery_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/nav_gallery_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_gallery_selector"
                android:contentDescription="@string/nav_gallery" />

            <TextView
                android:id="@+id/nav_gallery_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_gallery"
                android:textSize="12sp"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="@drawable/bottom_nav_item_color"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Music & Video Tab -->
        <LinearLayout
            android:id="@+id/nav_music_video_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/nav_music_video_icon"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:contentDescription="@string/nav_music_video"
                android:src="@drawable/ic_music_video_selector" />

            <TextView
                android:id="@+id/nav_music_video_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_music_video"
                android:textSize="12sp"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="@drawable/bottom_nav_item_color"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Profile Tab -->
        <LinearLayout
            android:id="@+id/nav_profile_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/nav_profile_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile_selector"
                android:contentDescription="@string/nav_profile" />

            <TextView
                android:id="@+id/nav_profile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_profile"
                android:textSize="12sp"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="@drawable/bottom_nav_item_color"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>