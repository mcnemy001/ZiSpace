<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_2"
    android:fillViewport="true"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <LinearLayout
            android:paddingTop="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:id="@+id/header_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:src="@drawable/logo_home_light"
                android:layout_marginEnd="12dp"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/app_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/app_name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/quicksand_bold" />

            <TextView
                android:id="@+id/greeting_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hello_there"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/quicksand_medium" />

        </LinearLayout>

        <!-- Main Content Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/main_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@id/header_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/card_top_rounded"
                android:padding="20dp">

                <!-- Profile Section -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/profile_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/background_2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp"
                            android:layout_marginEnd="16dp">

                            <ImageView
                                android:id="@+id/profile_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/profile_placeholder"
                                android:contentDescription="@string/profile_image_desc" />

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/profile_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="Aziyusman Maulana"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:fontFamily="@font/quicksand_bold" />

                            <TextView
                                android:id="@+id/profile_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                tools:text="Informatic Engineering\nStudent"
                                android:textSize="14sp"
                                android:textColor="@color/text_primary"
                                android:fontFamily="@font/quicksand_medium"
                                android:alpha="0.8" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Introduction Section -->
                <TextView
                    android:id="@+id/intro_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    tools:text="Hey, I'm Azi!"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary_dark"
                    android:fontFamily="@font/quicksand_bold" />

                <TextView
                    android:id="@+id/intro_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    tools:text="I'm currently studying informatic engineering at UNIKOM, Bandung. Let's explore more about me!"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary_dark"
                    android:fontFamily="@font/quicksand_medium"
                    android:alpha="0.7" />

                <!-- Divider -->
                <View
                    android:id="@+id/hobby_divider"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/line_divider" />

                <!-- Hobby Section -->
                <LinearLayout
                    android:id="@+id/hobby_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <!-- Icon and Title for Hobby -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_hobby"
                        android:layout_marginEnd="8dp"
                        app:tint="@color/text_primary_dark"
                        android:contentDescription="@string/hobby_title" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hobby_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_dark"
                        android:fontFamily="@font/quicksand_bold" />
                </LinearLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/hobby_flexbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:flexWrap="wrap"
                    app:justifyContent="flex_start"
                    app:alignItems="flex_start" />

                <!-- Favorite Food Section -->
                <LinearLayout
                    android:id="@+id/food_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <!-- Icon and Title for Food -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_food"
                        android:layout_marginEnd="8dp"
                        app:tint="@color/text_primary_dark"
                        android:contentDescription="@string/food_title"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/food_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_dark"
                        android:fontFamily="@font/quicksand_bold" />
                </LinearLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/food_flexbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:flexWrap="wrap"
                    app:justifyContent="flex_start"
                    app:alignItems="flex_start" />

                <!-- Favorite Drink Section -->
                <LinearLayout
                    android:id="@+id/drink_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <!-- Icon and Title for Drink -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_drink"
                        android:layout_marginEnd="8dp"
                        app:tint="@color/text_primary_dark"
                        android:contentDescription="@string/drink_title"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/drink_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_dark"
                        android:fontFamily="@font/quicksand_bold" />
                </LinearLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/drink_flexbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:flexWrap="wrap"
                    app:justifyContent="flex_start"
                    app:alignItems="flex_start" />

                <!-- Interest Section -->
                <LinearLayout
                    android:id="@+id/interest_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <!-- Icon and Title for Interest -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_interest"
                        android:layout_marginEnd="8dp"
                        app:tint="@color/text_primary_dark"
                        android:contentDescription="@string/intereset_title"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/intereset_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_dark"
                        android:fontFamily="@font/quicksand_bold" />
                </LinearLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/interest_flexbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:flexWrap="wrap"
                    app:justifyContent="flex_start"
                    app:alignItems="flex_start" />

                <!-- Aspiration Section -->
                <LinearLayout
                    android:id="@+id/aspiration_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <!-- Icon and Title for Aspiration -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_aspiration"
                        android:layout_marginEnd="8dp"
                        app:tint="@color/text_primary_dark"
                        android:contentDescription="@string/aspiration_title"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/aspiration_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_dark"
                        android:fontFamily="@font/quicksand_bold" />
                </LinearLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/aspiration_flexbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp"
                    app:flexWrap="wrap"
                    app:justifyContent="flex_start"
                    app:alignItems="flex_start" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
